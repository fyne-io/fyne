<canvas size="500x300">
	<content>
		<rectangle size="500x300"/>
	</content>
	<overlay>
		<widget size="500x300" type="*widget.OverlayContainer">
			<widget pos="10,10" size="70x107" type="*widget.Menu">
				<widget size="70x107" type="*widget.Shadow">
					<radialGradient centerOffset="0.5,0.5" pos="-4,-4" size="4x4" startColor="shadow"/>
					<linearGradient endColor="shadow" pos="0,-4" size="70x4"/>
					<radialGradient centerOffset="-0.5,0.5" pos="70,-4" size="4x4" startColor="shadow"/>
					<linearGradient angle="270" pos="70,0" size="4x107" startColor="shadow"/>
					<radialGradient centerOffset="-0.5,-0.5" pos="70,107" size="4x4" startColor="shadow"/>
					<linearGradient pos="0,107" size="70x4" startColor="shadow"/>
					<radialGradient centerOffset="0.5,-0.5" pos="-4,107" size="4x4" startColor="shadow"/>
					<linearGradient angle="270" endColor="shadow" pos="-4,0" size="4x107"/>
				</widget>
				<widget size="70x107" type="*widget.Scroll">
					<widget size="70x107" type="*widget.menuBox">
						<rectangle fillColor="background" size="70x115"/>
						<container pos="0,4" size="70x115">
							<widget size="70x28" type="*widget.menuItem">
								<text pos="8,4" size="54x20">A</text>
							</widget>
							<widget pos="0,32" size="70x1" type="*widget.Separator">
								<rectangle fillColor="disabled" size="70x1"/>
							</widget>
							<widget pos="0,37" size="70x28" type="*widget.menuItem">
								<rectangle fillColor="focus" size="70x28"/>
								<text pos="8,4" size="54x20">B (long)</text>
							</widget>
							<widget pos="0,70" size="70x28" type="*widget.menuItem">
								<text pos="8,4" size="54x20">C</text>
								<image pos="50,4" rsc="menuExpandIcon" size="iconInlineSize"/>
							</widget>
						</container>
					</widget>
				</widget>
			</widget>
		</widget>
	</overlay>
</canvas>
