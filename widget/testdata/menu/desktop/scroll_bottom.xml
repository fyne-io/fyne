<canvas size="100x100">
	<content>
		<rectangle size="100x100"/>
	</content>
	<overlay>
		<widget size="100x100" type="*widget.OverlayContainer">
			<widget pos="10,10" size="26x90" type="*widget.Menu">
				<widget size="26x90" type="*widget.Shadow">
					<radialGradient centerOffset="0.5,0.5" pos="-4,-4" size="4x4" startColor="shadow"/>
					<linearGradient endColor="shadow" pos="0,-4" size="26x4"/>
