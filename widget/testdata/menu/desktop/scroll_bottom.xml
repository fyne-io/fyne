							<widget pos="0,93" size="26x27" type="*widget.menuItem">
								<text pos="8,4" size="10x19">D</text>
							</widget>
							<widget pos="0,124" size="26x27" type="*widget.menuItem">
								<text pos="8,4" size="10x19">E</text>
							</widget>
							<widget pos="0,155" size="26x27" type="*widget.menuItem">
								<text pos="8,4" size="10x19">F</text>
							</widget>
						</container>
					</widget>
					<widget size="26x0" type="*widget.Shadow">
						<linearGradient size="26x8" startColor="shadow"/>
					</widget>
					<widget pos="20,0" size="6x90" type="*widget.scrollBarArea">
