<canvas size="100x50">
	<content>
		<rectangle size="100x50"/>
	</content>
	<overlay>
		<widget size="100x50" type="*widget.OverlayContainer">
			<widget pos="10,10" size="70x40" type="*widget.Menu">
				<widget size="70x40" type="*widget.Shadow">
					<radialGradient centerOffset="0.5,0.5" pos="-4,-4" size="4x4" startColor="shadow"/>
					<linearGradient endColor="shadow" pos="0,-4" size="70x4"/>
					<radialGradient centerOffset="-0.5,0.5" pos="70,-4" size="4x4" startColor="shadow"/>
					<linearGradient angle="270" pos="70,0" size="4x40" startColor="shadow"/>
					<radialGradient centerOffset="-0.5,-0.5" pos="70,40" size="4x4" startColor="shadow"/>
					<linearGradient pos="0,40" size="70x4" startColor="shadow"/>
					<radialGradient centerOffset="0.5,-0.5" pos="-4,40" size="4x4" startColor="shadow"/>
					<linearGradient angle="270" endColor="shadow" pos="-4,0" size="4x40"/>
				</widget>
				<widget size="70x40" type="*widget.Scroll">
					<widget size="70x144" type="*widget.menuBox">
						<rectangle fillColor="background" size="70x152"/>
						<container pos="0,4" size="70x152">
							<widget size="70x28" type="*widget.menuItem">
								<text pos="8,4" size="54x20">A</text>
							</widget>
							<widget pos="0,32" size="70x1" type="*widget.Separator">
								<rectangle fillColor="disabled" size="70x1"/>
							</widget>
							<widget pos="0,37" size="70x28" type="*widget.menuItem">
								<text pos="8,4" size="54x20">B (long)</text>
							</widget>
							<widget pos="0,70" size="70x28" type="*widget.menuItem">
								<text pos="8,4" size="54x20">C</text>
								<image pos="50,4" rsc="menuExpandIcon" size="iconInlineSize"/>
							</widget>
							<widget pos="0,103" size="70x1" type="*widget.Separator">
								<rectangle fillColor="disabled" size="70x1"/>
							</widget>
							<widget pos="0,108" size="70x28" type="*widget.menuItem">
								<text pos="8,4" size="54x20">D</text>
								<image pos="50,4" rsc="menuExpandIcon" size="iconInlineSize"/>
							</widget>
						</container>
					</widget>
					<widget pos="64,0" size="6x40" type="*widget.scrollBarArea">
						<widget pos="3,0" size="3x16" type="*widget.scrollBar">
							<rectangle fillColor="scrollbar" size="3x16"/>
						</widget>
					</widget>
					<widget pos="0,40" size="70x0" type="*widget.Shadow">
						<linearGradient endColor="shadow" pos="0,-8" size="70x8"/>
					</widget>
				</widget>
			</widget>
		</widget>
	</overlay>
</canvas>
