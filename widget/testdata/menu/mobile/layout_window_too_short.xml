<canvas size="100x50">
	<content>
		<rectangle size="100x50"/>
	</content>
	<overlay>
		<widget pos="2,3" size="96x45" type="*widget.OverlayContainer">
			<widget pos="10,10" size="66x35" type="*widget.Menu">
				<rectangle fillColor="overlayBackground" shadowColor="shadow" shadowOffset="-1,1" shadowSoftness="1" size="66x35"/>
				<widget size="66x35" type="*widget.Scroll">
					<widget size="66x118" type="*widget.menuBox">
						<rectangle fillColor="menuBackground" size="66x118"/>
						<container size="66x118">
							<widget size="66x35" type="*widget.menuItem">
								<text pos="8,8" size="50x19">A</text>
							</widget>
							<widget pos="0,39" size="66x1" type="*widget.Separator">
								<rectangle fillColor="separator" size="66x1"/>
							</widget>
							<widget pos="0,44" size="66x35" type="*widget.menuItem">
								<text pos="8,8" size="50x19">B (long)</text>
							</widget>
							<widget pos="0,83" size="66x35" type="*widget.menuItem">
								<text pos="8,8" size="30x19">C</text>
								<image pos="46,7" rsc="menuExpandIcon" size="iconInlineSize" themed="foreground"/>
							</widget>
						</container>
					</widget>
					<widget pos="0,35" size="66x0" type="*widget.Shadow">
						<linearGradient endColor="shadow" pos="0,-8" size="66x8"/>
					</widget>
					<widget pos="60,0" size="6x35" type="*widget.scrollBarArea">
						<widget pos="3,0" size="3x16" type="*widget.scrollBar">
							<rectangle fillColor="scrollbar" radius="3" size="3x16"/>
						</widget>
					</widget>
				</widget>
			</widget>
		</widget>
	</overlay>
</canvas>
