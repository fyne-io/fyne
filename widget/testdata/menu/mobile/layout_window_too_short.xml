<canvas size="100x50">
	<content>
		<rectangle size="100x50"/>
	</content>
	<overlay>
		<widget size="100x50" type="*widget.OverlayContainer">
			<widget pos="10,10" size="66x40" type="*widget.Menu">
				<widget size="66x40" type="*widget.Shadow">
					<radialGradient centerOffset="0.5,0.5" pos="-4,-4" size="4x4" startColor="shadow"/>
					<linearGradient endColor="shadow" pos="0,-4" size="66x4"/>
					<radialGradient centerOffset="-0.5,0.5" pos="66,-4" size="4x4" startColor="shadow"/>
					<linearGradient angle="270" pos="66,0" size="4x40" startColor="shadow"/>
					<radialGradient centerOffset="-0.5,-0.5" pos="66,40" size="4x4" startColor="shadow"/>
					<linearGradient pos="0,40" size="66x4" startColor="shadow"/>
					<radialGradient centerOffset="0.5,-0.5" pos="-4,40" size="4x4" startColor="shadow"/>
					<linearGradient angle="270" endColor="shadow" pos="-4,0" size="4x40"/>
				</widget>
				<widget size="66x40" type="*widget.Scroll">
					<widget size="66x118" type="*widget.menuBox">
						<rectangle fillColor="menuBackground" size="66x118"/>
						<container size="66x118">
							<widget size="66x35" type="*widget.menuItem">
								<text pos="8,8" size="50x19">A</text>
							</widget>
							<widget pos="0,39" size="66x1" type="*widget.Separator">
								<rectangle fillColor="disabled" size="66x1"/>
							</widget>
							<widget pos="0,44" size="66x35" type="*widget.menuItem">
								<text pos="8,8" size="50x19">B (long)</text>
							</widget>
							<widget pos="0,83" size="66x35" type="*widget.menuItem">
								<text pos="8,8" size="30x19">C</text>
								<image pos="46,7" rsc="menuExpandIcon" size="iconInlineSize"/>
							</widget>
						</container>
					</widget>
					<widget pos="0,40" size="66x0" type="*widget.Shadow">
						<linearGradient endColor="shadow" pos="0,-8" size="66x8"/>
					</widget>
					<widget pos="60,0" size="6x40" type="*widget.scrollBarArea">
						<widget pos="3,0" size="3x16" type="*widget.scrollBar">
							<rectangle fillColor="scrollbar" size="3x16"/>
						</widget>
					</widget>
				</widget>
			</widget>
		</widget>
	</overlay>
</canvas>
